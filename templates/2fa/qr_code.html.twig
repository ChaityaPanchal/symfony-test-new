{# {% extends 'base.html.twig' %}

{% block title %}2FA Authentication{% endblock %}

{% block body %}

    <p>Scan the QR code below using your authenticator app (like Google Authenticator or Authy)</p>

   <div style="text-align: center;">
        <img src="data:image/png;base64,{{ qrCodeBase64 }}" alt="QR Code">
    </div>

    <p>If you can't scan the QR code, enter this secret key manually in your authenticator app:</p>
    <p><strong>{{ totpToken }}</strong></p>

    <button><a href="{{ path('2fa_verify') }}">Continue to Verify 2FA</a></button>
{% endblock %}
 #}


<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>QR Code Generator</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		<style>
			{# body {
				background-color: #4800a3;
			} #}

			.container {
				background-color: lightcoral;
				color: white;
				border-radius: 5%;
				padding: 3em;
			}

			.header {
				color: white;
				text-align: center;
				margin-top: 1em;
				margin-bottom: 1em;
				font-size: 34px;
				font-weight: bold;
			}

			.download-share-buttons {
				display: flex;
				justify-content: center;
				margin-top: 1em;
			}

			.download-share-buttons button {
				margin-right: 0.5em;
			}

			.py-2 {
				background-color: black;
			}
		</style>
	</head>
	<body>
		<header class="py-2">
			<h1 class="header">2FA Authentication</h1>
		</header>
		<div class="container shadow" style="width: 800px; margin-top: 2em; padding: 3em">
				<h3>
					<center>Scan QR CODE for 2FA:</center>
				</h3>
			    </br>
            <div class="input-group mb-3">
                <div style="margin: auto">
                        <img src="data:image/png;base64,{{ qrCodeBase64 }}" alt="QR Code">
                </div>
            </div>
            <div class="input-group mb-3">
				<span class="input-group-text" id="inputGroup-sizing-default">TOTP TOKEN:</span>
				<input type="text" class="form-control font-weight-bold" value="{{ totpToken }}" aria-describedby="inputGroup-sizing-default" name="qr_text" readonly>
			</div>
			<div class="input-group mb-3">
				<button style="max-width: 200px; margin: auto" class="form-control"><a href="{{ path('2fa_verify') }}" style="color: #fb3f00; text-decoration: none;">enter otp</a></button>
			</div>
        </div>
    </body>
</html>
