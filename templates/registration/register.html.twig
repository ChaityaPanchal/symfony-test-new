{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    {% for type, messages in app.flashes %}
        {% if type == 'registration_error' %}
            {% for message in messages %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        {% elseif type == 'registration_success' %}
            {% for message in messages %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
        {% endif %}
    {% endfor %}

    <div class="d-flex align-items-center py-4 bg-body-tertiary">
        <main class="form-signin w-100 m-auto">
            {{ form_start(registrationForm) }}
                <h1 class="h3 text-center mb-3 fw-normal">Register</h1>
                
                <div class="form-floating">
                    {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control w-100'} }) }}
                </div>
                
                <div class="mt-2 mb-4 form-floating">
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control w-100'} }) }}  
                    Already registered? <a href="{{ path('app_login') }}">click here</a>
                </div>
                
                <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
            {{ form_end(registrationForm) }}
        </main>
    </div>
{% endblock %}
